<div class="container">
  <!-- maintaining gap -->
  <div class="row gap">
    <div class="col-md-12"></div>
  </div>
  <!-- for headline -->
  <div class="row">
    <div class="col-md-12">
      <h1 class="heading">Lawyer Sign Up Form</h1>
    </div>
  </div>
  <!-- for form box -->
  <div class="row formBox">
    <div class="col-md-4 form-bg-left">
      <!-- buttons -->
      <div class="row">
              <div class="md-col-12">
                <div class="btn btn-primary form-btn">User Details
				<li class="fa fa-check-circle " style="float:right"></li></div>
              </div>
            </div>
            <div class="row">
              <div class="md-col-12">
                <div class="btn btn-primary form-btn"style="background:#232c3d;color:white">Legal Info</div>
              </div>
            </div>
            <div class="row">
              <div class="md-col-12">
                <div class="btn btn-primary form-btn">Basic Details</div>
              </div>
            </div>
            <div class="row">
              <div class="md-col-12">
                <div class="btn btn-primary form-btn">Bar Info</div>
              </div>
            </div>
            <div class="row">
              <div class="md-col-12">
                <div style="margin-top:60px;font-size:15px;">* Required fields</div>
              </div>
            </div>
          <!-- end of buttons -->
    </div>
    <div class="col-md-8 form-bg-right">
      <!-- practice areas -->
      <div class="row">
        <div class="col-md-3">*Practice areas:</div>
        <div class="col-md-9">
          <form>
            <select style="width:100%;border: 2px solid #a5a1a2;height:38px;padding-left:2%;" value="Select max 4 Practice area">
              <option value="volvo">Select max practice area</option>
               <option value="saab">Punjab</option>
              <option value="mercedes">UP</option>
              <option value="audi">Haryana</option>
            </select>
          </form>
        </div>
      </div>
      <!-- end of practice areas -->
      <!-- court -->
      <div class="row">
        <div class="col-md-3" style="margin-top:20px">*Court:</div>
        <div class="col-md-7" >
          <div id="add-more-fields">
          <input class="form-width" type="text" id="add-more-year" placeholder="Add court"></div>
        </div>
        <div class="col-md-1" style="margin-top:20px">
          <div class="btn btn-primary add-btn" onclick="add_fields();">+Add</div>
        </div>
      </div>
      <!-- end of court -->
       <!-- state form -->
      <div class="row " >
        <div class="col-md-3" style="margin-top:20px;">*State:</div>
        <div class="col-md-9">
          <form>
            <select style="margin-top:20px;width:100%;border: 2px solid #a5a1a2;height:38px;padding-left:2%;">
              <option value="volvo">Delhi</option>
               <option value="saab">Punjab</option>
              <option value="mercedes">UP</option>
              <option value="audi">Haryana</option>
            </select>
          </form>
        </div>
      </div>
      <!-- end of state -->
      
      <!-- office address -->
      <div class="row">
        <div class="col-md-3" style="margin-top:20px">*Office Address:</div>
        <div class="col-md-9">
          <input class="form-width"type="text">
        </div>
      </div>
